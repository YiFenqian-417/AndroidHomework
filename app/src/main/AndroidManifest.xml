<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.news">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/symbol"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/symbol"
        android:supportsRtl="true"
        android:theme="@style/Theme.News"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.Person"></activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@anim/in_from_right" />

        <activity
            android:name=".Activity.ClickedHistory"
            android:theme="@style/Theme.News" />
        <activity
            android:name=".Activity.News"
            android:theme="@style/Theme.News" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.News">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>